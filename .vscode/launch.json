    "version": "0.2.0",
    "configurations": [
        {
            "name": "Things (On)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "*",
                "on"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Things (Off)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "*",
                "off"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Things (Toggle)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "*",
                "toggle"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Things (Preset)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "bulb",
                "brightness",
                "@0"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Things (Color)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "lamp,bulb",
                "color",
                "150"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}